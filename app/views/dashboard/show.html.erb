<h1>Welcome, <%= current_user.name %></h1>
<h1><%= button_to 'Explore' %></h1>
<section id='traveller'>
<h2>Traveller</h2>
  <h3>Favorites/Saved Excursions</h3>
  <section id='saved_excursion'>

  </section>
    <h2>Travelboards/organize by city/location</h2>
  </section>

<section id='local'>
<h2>Local</h2>
  <h3>Local Excursions</h3>
  <h3><%= button_to 'Add Excursions', excursions_new_path, method: :get %></h3>
  <section id='my_excursions'>
    <% @excursions.each do |excursion| %>
      <div class="card border-primary mb-3" style="max-width: 20rem;">
        <div class="card-header"></div>
        <div class="card-body">
          <h4 class="card-title"><%= excursion.title %></h4>
          <p class="card-text"><%= excursion.description %></p>
          <%= button_to 'Edit', excursions_edit_path(excursion.id), method: :get %>
          <%= button_to 'Delete' %>
        </div>
      </div>
    <% end %>
  </section>
</section>
