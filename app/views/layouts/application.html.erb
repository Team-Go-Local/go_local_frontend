<!DOCTYPE html>
<html>
  <head>
    <title>GoLocalFrontend</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= image_tag 'go_local.png', class: "navbar-brand", style: 'width:80px' %>
    </nav>

    <% flash.each do |type, msgs|%>
    <h4><%= msgs %></h4>
    <% end %>

    <%= yield %>
    <%= link_to 'Logout', logout_path unless !current_user %>
  </body>
</html>
