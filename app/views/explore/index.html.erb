<div class="greet">
  <h1>Explore Page </h1>

  <form method="get">
    <div class="form-group">
      <select class="custom-select" onchange="this.form.submit()">
        <option selected="">Select by City</option>
        <% @excursions.each do |excursion| %>
          <option value="excursion.location"><%= excursion.location %></option>
        <% end %>
      </select>
      <noscript><input type="submit" value="Submit"></noscript>
    </div>
  </form>

</div>

<section id="populated-excursions">
  <h2>Search Results </h2>
  <% @excursions.each do |excursion| %>
    <div class="card border-secondary mb-3" style="max-width: 15rem;">
      <div class="card-header">Excursion</div>
        <div class="card-body">
        <p><%= link_to excursion.title, "/excursions/#{excursion.id}" %></p>
        <p><%= excursion.description %></p>
        <%=link_to "Save" %>
      </div>
    </div>
  <% end %>
</section>
