<div class="greet">
  <h1>Explore Page </h1>
</div>

<h1><%= text_field_tag :city %></h1>
<h1><%= button_to 'Search by City' %></h1>

<h2>Search Results </h2>
<% @excursions.each do |excursion| %>
  <p><%= link_to excursion.title, "/excursions/#{excursion.id}" %></p>
  <p><%= excursion.description %></p>
  <h2><%=button_to "Save" %></h2>
<% end %>

